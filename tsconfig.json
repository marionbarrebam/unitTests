{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    /*Path rewriting*/
    "baseUrl": "./",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    /* Strict Type-Checking Options */
    "strictNullChecks": true,
    "noImplicitAny": true
  }
}
